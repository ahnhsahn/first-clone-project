import numpy as np
import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation
import time

fig, ax = plt.subplots()
ax.set_xlim(0, 100)
ax.set_ylim(0, 10000)

x = np.arange(101)
y = np.arange(101)
line, = ax.plot(x, y)

text = ax.text(70, 9000, '', fontsize=12)  # 숫자를 표시할 텍스트 객체

# 변수 추가
paused = False

def pause_animation(seconds):
    global paused
    paused = True
    time.sleep(seconds)
    paused = False

# 초 후에 애니메이션을 일시 정지하려면 아래와 같이 호출합니다.
pause_animation(5)  # 5초 후에 정지하도록 설정 (원하는 초를 지정)

def update(num, x, y, line, text):
    if not paused:
        line.set_data(x[:num], y[:num])
        text.set_text(f'{1.00 + num * 0.02:.2f}x')  # 숫자 업데이트
        text.set_position((45, 5000))
    return line, text

anim = FuncAnimation(fig, update, frames=len(x) + 1, fargs=(x, y ** 2, line, text), interval=100, repeat=False)

# 애니메이션이 끝난 후 창을 자동으로 닫습니다.
plt.show()
plt.close()
